<h1>Find a Recipe</h1>

<%= form_with(url: recipes_path, method: :get, local: true) do |form| %>
  <div>
    <%= form.label :query, "Enter your ingredients" %>
    <%= form.text_field :query %>
  </div>

  <div>
    <%= form.submit "Find Recipes" %>
  </div>
<% end %>

<% if @recipes.empty? %>
  <p>Try searching for new ingredients!</p>
<% else %>
  <% @recipes.each do |recipe| %>
    <div>
      <h2><%= recipe.title %></h2>
      <div>
        <img src=<%= recipe.image %> alt=<%= recipe.title %> width="100" height="100"/>
      </div>
      <h3>Ingredients:</h3>
      <ul>
        <% recipe.ingredients.each do |ingredient| %>
          <li><%= ingredient %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>